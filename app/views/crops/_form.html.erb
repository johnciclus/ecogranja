<%= form_for(@crop, :remote => true) do |f| %>	
	<div class="field">
		<%= f.label :article_id, "Articulo" %><br />
		<%= f.select :article_id, @articles.collect {|c| [ c.title, c.id ]}, :title => 'Articulo que describe el cultivo' %>
	</div>
	<div class="field">
		<%= f.label :name, "Nombre del cultivo" %><br />
		<%= f.text_field :name, :title => 'Nombre del cultivo<br /> Tipo: alfanumérico <br /> Ej: Maiz.' %>
	</div>
	<div class="field">
		<%= f.label :description, "Descripción del cultivo" %><br />
		<%= f.text_field :description, :title => 'Descripción del cultivo<br /> Tipo: alfanumérico <br /> Ej: planta gramínea anual originaria de América.' %>
	</div>
	<div class="field">
		<%= f.label :NabsorPro, "Nitrogeno absorbido" %><br />
		<%= f.text_field :NabsorPro, :title => 'Nitrogeno necesario para el crecimiento del cultivo <br /> Tipo: numérico  <br /> Unidades: [Kg/tn] <br /> Ej: 22' %>
	</div>
	<div class="field">
		<%= f.label :PAbsorPro, "Fósforo absorbido" %><br />
		<%= f.text_field :PAbsorPro, :title => 'Fósforo necesario para el crecimiento del cultivo <br /> Tipo: numérico  <br /> Unidades: [Kg/tn] <br /> Ej: 4' %>
	</div>
	<div class="field">
		<%= f.label :KAbsorPro, "Potasio absorbido" %><br />
		<%= f.text_field :KAbsorPro, :title => 'Potasio necesario para el crecimiento del cultivo <br /> Tipo: numérico  <br /> Unidades: [Kg/tn] <br /> Ej: 19' %>
	</div>
	<div class="field">
		<%= f.label :NExtraPro, "Nitrógeno extraido" %><br />
		<%= f.text_field :NExtraPro, :title => 'Nitrógeno extraido para el crecimiento de la cosecha <br /> Tipo: numérico  <br /> Unidades: [Kg/tn] <br /> Ej: 15' %>
	</div>
	<div class="field">
		<%= f.label :PExtraPro, "Fósforo extraido" %><br />
		<%= f.text_field :PExtraPro, :title => 'Fósforo extraido para el crecimiento de la cosecha <br /> Tipo: numérico  <br /> Unidades: [Kg/tn] <br /> Ej: 3' %>
	</div>
	<div class="field">
