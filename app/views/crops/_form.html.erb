	<div class="field">
		<%= f.label :DesTempPlanta, "Desviación estandar de la Temperatura promedio optima" %><br />
		<%= f.text_field :DesTempPlanta, :title => 'Desviación estandar de la planta a temperatura para el optimo desarrollo del cultivo<br /> Tipo: numérico  <br /> Unidades: [%] <br /> Ej: 2.5' %>
	</div>
	<div class="actions">
		<%= f.submit "Registrar Cultivo", :class => "button"%>
	</div>
<% end %>