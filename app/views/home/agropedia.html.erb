<script type="text/javascript">
	function complete_jquery_data_tables_agropedia(data, textStatus, jqxhr){
		if(textStatus == 'success'){
			libraries['jquery_data_tables']	=true;
			ready_jquery_data_tables('tablaArticulos');
		}
	};
	function main_agropedia(){
		if(!libraries['jquery_ui']){
			$.getScript("/assets/jquery/jquery-ui-1.8.23.custom.min.js", complete_jquery_ui);
		}
		else{
			ready_jquery_ui();
		}
		if(!libraries['jquery_data_tables']){
			$.getScript("/assets/jquery/jquery.dataTables.min.js", complete_jquery_data_tables_agropedia);
		}
		else{
			ready_jquery_data_tables('tablaArticulos');
		}
		
	};
	
	$(document).ready(function () {
		main_agropedia();
		<%= render :file => "home/_refresh.js.erb" %>
	});
</script> 