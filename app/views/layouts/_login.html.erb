<%if @mode == 'public'%>
	<%= form_tag(:login, :remote => 'true') do %>
		<div>
			<div id="left">
				<b>Correo o usuario:</b></br> 
				<%= text_field_tag :username_or_email %>
			</div> 
			<div id="right">
				<b>Contrase√±a:</b></br> 	  
				<%= password_field_tag :login_password %>
			</div>
		</div>
		<div>
			<%= submit_tag "Ingresar", :class => 'links' %>
			<%= link_to "Nuevo usuario", { :controller => 'users', :action => 'index' }, :class => 'links'%>
		</div> 						
	<% end %>
<%else%>
	<div>
		<div>
			<b>Bienvenido a EcoGranja</b>
			<br />
			<br />
		</div>
		<div id="left">
			<%= form_tag({:controller => 'users', :action => 'edit', :id => @current_user.id}, :method => :get, :remote => 'true') do %>
				<%= submit_tag @current_user.username, :class => 'links' %>
			<% end %>
		</div>
		<div id="right">
		<%= form_tag(:logout, :remote => 'true') do %>
			<%= submit_tag 'Salir', :class => 'links' %>
		<% end %>
		</div>
	</div>
<%end%>